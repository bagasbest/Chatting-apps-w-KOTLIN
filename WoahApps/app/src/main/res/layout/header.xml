<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivImageNavDrawer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/avatar_blank"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="3dp" />

        <ImageView
            android:id="@+id/changePictureIv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/ivImageNavDrawer"
            android:layout_alignEnd="@+id/ivImageNavDrawer"
            android:background="@drawable/shape_circle"
            android:elevation="1dp"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_photo_camera_24"
            android:contentDescription="@string/image" />

    </RelativeLayout>




    <TextView
        android:id="@+id/tvUsernameNavDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Your name here yah"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEmailNavDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="youremail@email.com"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPhoneNavDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="081234567890"
        android:textColor="@android:color/white"
        android:textSize="16sp" />



</LinearLayout>